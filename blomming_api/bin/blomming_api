#!/usr/bin/env ruby
# encoding: utf-8
require 'blomming_api'

USAGE = <<ENDUSAGE

Usage: blomming_api [option]
\t-v: Version and gem info
\t-h: Authentication set-up help 

ENDUSAGE

if ARGV.empty?
  puts USAGE
  exit
end

option = ARGV[0].downcase

if option == "-v"
  puts
  puts "About gem:"
  puts BlommingApi::about
  puts
elsif option == "-h"
  puts
  puts "Authentication set-up help:"
  puts BlommingApi::help
  puts
else
  puts USAGE  	
end


